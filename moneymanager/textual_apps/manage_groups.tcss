.modal {
    align: center middle;

    Grid {
        grid-size: 2;
        grid-gutter: 1 2;
        grid-rows: 1fr 3;
        padding: 0 1;
        width: 60;
        height: 9;
        border: thick $background 80%;
        background: $surface;

        Input, Label {
            column-span: 2;
            height: 1fr;
            width: 1fr;
            content-align: center middle;
        }
        Button {
            width: 100%;

        }
        .cancel-button {
            color: $error
        }
        .confirm-button {
            color: $success
        }
    }
}
